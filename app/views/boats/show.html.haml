%ol.breadcrumb
  %li.breadcrumb-item
    Home
  %li.breadcrumb-item
    = link_to "#{@boat.client.name}", client_path(@boat.client)
%br
%h3 #{@boat.name}
%br
= link_to "Edit #{@boat.name}", edit_boat_path(@boat), class: 'btn btn-sm btn-primary text-white'
\|
= link_to 'Back to Boats List', boats_path, class: 'btn btn-sm btn-primary text-white'
%br
%br
.card
  .card-header.bg-primary.text-white
    .row
      .col
        %strong Owner:
        = @boat.client.name
      .col
        %strong Marina:
        = @boat.marina.name
  .card-body
    .row
      .col
        %strong Manufacturer:
        = @boat.manufacturer
      .col
        %strong Model:
        = @boat.model
      .col
        %strong Year:
        = @boat.year
      .col
        %strong Registration #
        = @boat.identification
    %hr
    .row
      .col
        %strong Boat Type:
        = @boat.boat_type.humanize
      .col
        %strong Boat Configuration:
        = @boat.configuration.humanize
      .col
        %strong Boat Construction:
        = @boat.construction.humanize
      .col
        %strong Hailing Port:
        = @boat.hailing_port
    %hr
    .row
      .col
        %strong Engines:
        = @boat.engine
      .col
        %strong # of Engines:
        = @boat.engine_count
      .col
        %strong Propulsion:
        = @boat.propulsion.humanize
      .col
        %strong Fuel Type:
        = @boat.fuel_type.humanize
