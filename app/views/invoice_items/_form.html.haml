= form_for @invoice_item do |f|
  - if @invoice_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice_item.errors.count, "error")} prohibited this invoice_item from being saved:"
      %ul
        - @invoice_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :invoice
    = f.text_field :invoice
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :unit_cost
    = f.text_field :unit_cost
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :discount
    = f.text_field :discount
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
